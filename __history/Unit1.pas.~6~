unit Unit1;

interface
type
  TMarket = class abstract
  protected
    FPrice : integer;
    procedure AddMotherboard(); virtual; abstract;
    procedure AddCPU(); virtual; abstract;
    procedure AddRAM(); virtual; abstract;
    procedure AddBody(); virtual; abstract;
    procedure AddPowerSupply(); virtual; abstract;
    procedure AddHdd(); virtual; abstract;
  public
    procedure assembly;
    function  count(price:integer): integer;
  end;

  TAsus = class (TMarket)
    protected
      procedure AddMotherboard();override;
      procedure AddCPU(); override;
      procedure AddRAM(); override;
      procedure AddBody(); override;
      procedure AddPowerSupply(); override;
      procedure AddHdd(); override;
      procedure AddGraphicCard();
  end;

  TZalman = class (TMarket)
    protected
     procedure AddMotherboard();override;
     procedure AddCPU(); override;
     procedure AddRAM(); override;
     procedure AddBody(); override;
     procedure AddPowerSupply(); override;
     procedure AddHdd(); override;
     procedure AddSsd();
  end;

implementation

{ TMarket }

procedure TMarket.assembly;
  begin
    writeln('Сборка:');
    AddBody;
    AddMotherboard;
    AddCPU;
    AddRAM;
    AddPowerSupply;
    AddHdd;
    write(FPrice);
  end;

function TMarket.count(price:integer): integer;
  begin
    FPrice:= FPrice + price;
  end;

{ TAsus }

procedure TAsus.AddBody;
  begin
    writeln('Корпус');
    count(3000);
  end;

procedure TAsus.AddCPU;
  begin
    writeln('Процессор');
    count(9000);
  end;

procedure TAsus.AddGraphicCard;
  begin
    writeln('Видеокарта');
    count(15000);
  end;

procedure TAsus.AddHdd;
  begin
    writeln('Жесткий диск');
    count(3000);
  end;

procedure TAsus.AddMotherboard;
  begin
    writeln('Материнская плата');
    count(6000);
  end;

procedure TAsus.AddPowerSupply;
  begin
    writeln('Блок Питания');
    count(3000);
  end;

procedure TAsus.AddRAM;
  begin
    writeln('Оперативная память');
    count(5000);
  end;

{ TZalman }

procedure TZalman.AddBody;
  begin
    Writeln('Корпус: ');
    count(40000);
  end;

procedure TZalman.AddCPU;
  begin
    writeln('Процессор: ');
    count(10000);
  end;

procedure TZalman.AddHdd;
  begin
    writeln('Жесткий диск: ');
    count(4000);
  end;

procedure TZalman.AddMotherboard;
  begin
  writeln('Материнская плата: ');
  count(7000);
  end;

procedure TZalman.AddPowerSupply;
  begin
  writeln('Блок питания: ');
  count(4555);
  end;

procedure TZalman.AddRAM;
  begin
    writeln('Оперативная память: ');
    count(3333);
  end;

procedure TZalman.AddSsd;
  begin
    writeln('ССД: ');
    count(5500);
  end;

end.
