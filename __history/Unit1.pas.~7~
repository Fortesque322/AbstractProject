  begin
    Writeln('Корпус: ');
    count(40000);
  end;

procedure TZalman.AddCPU;
  begin
    writeln('Процессор: ');
    count(10000);
  end;

procedure TZalman.AddHdd;
  begin
    writeln('Жесткий диск: ');
    count(4000);
  end;

procedure TZalman.AddMotherboard;
  begin
    writeln('Материнская плата: ');
    count(7000);
  end;

procedure TZalman.AddPowerSupply;
  begin
    writeln('Блок питания: ');
    count(4555);
  end;

procedure TZalman.AddRAM;
  begin
    writeln('Оперативная память: ');
    count(3333);
  end;

procedure TZalman.AddSsd;
  begin
    writeln('ССД: ');
    count(5500);
  end;

{ THp }

procedure THp.AddBody;
  begin
    writeln('Корпус');
    count(5142)
  end;

procedure THp.AddCPU;
  begin
    writeln('Процессор: ');
    count(12310);
  end;

procedure THp.AddGraphicCard;
  begin
    writeln('Видеокарта');
    count(22990);
  end;

procedure THp.AddHdd;
  begin
    writeln('Жесткий диск: ');
    count(5505)
  end;

procedure THp.AddMonitor;
  begin
    writeln('Монитор: ');
    count(14999);
  end;

procedure THp.AddMotherboard;
  begin
    writeln('Материнская плата: ');
    count(8900);
  end;

